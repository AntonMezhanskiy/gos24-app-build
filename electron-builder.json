{
  "productName": "gos24-desktop",
  "appId": "kz.gos24",
  "directories": {
    "output": "build/${version}"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "baha96",
      "repo": "gos24-app-build"
    }
  ],
  "files": [
    "dist/electron/**/*"
  ],
  "mac": {
    "icon": "icons/icon.icns"
  },
  "win": {
    "icon": "icons/icon1.ico",
    "publish": [
      "github"
    ],
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "linux": {
    "icon": "icons"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  }
}
