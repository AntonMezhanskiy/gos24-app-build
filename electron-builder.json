{
  "productName": "gos24-desktop",
  "appId": "kz.gos24",
  "directories": {
    "output": "build/${version}"
  },
  "win": {
    "icon": "icons/icon1.ico",
    "artifactName": "${productName}-${arch}.${ext}",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "files": [
    "dist/electron/**/*"
  ],
  "mac": {
    "icon": "icons/icon.icns"
  },
  "linux": {
    "icon": "icons"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  }
}
